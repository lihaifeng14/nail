<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="item_title">
        <item name="android:textSize">17.0sp</item>
        <item name="android:textColor">@color/selector_item_title</item>
    </style>

    <style name="item_secondary_text">
        <item name="android:textSize">11.0sp</item>
        <item name="android:textColor">@color/item_secondary</item>
    </style>

    <style name="item_picture_text">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColor">@color/item_picture_title</item>
    </style>
</resources>
