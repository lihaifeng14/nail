<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/news_main_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_titlebar_height"
        android:background="@color/main_title_background" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:text="@string/main_title"
            android:textColor="@color/main_title_text"
            android:textSize="18sp" />
    </RelativeLayout>

    <com.nail.core.widget.pageindicator.TabPageIndicator
        android:id="@+id/news_main_tabindicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_titlebar_height" />

    <android.support.v4.view.ViewPager
        android:id="@+id/news_main_pager"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>